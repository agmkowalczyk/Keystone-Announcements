<div class="container">
	<h1>Logowanie</h1>
	<br>
	<form action="/logowanie" method="POST">
		<div class="form-group row">
			<label class="col-md-2 col-form-label">E-mail*</label>
			<div class="col-md-4">
				<input class="form-control" type="email" value="{{form.email}}" placeholder="Twój adres email" name="email" autofocus>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-md-2 col-form-label">Hasło*</label>
			<div class="col-md-4">
				<input class="form-control" type="password" placeholder="Twoje hasło" name="password">
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-2 col-form-label">&nbsp;</div>
			<div class="col-md-2">
				<p><a href="/zresetuj-haslo">Nie pamiętam hasła</a></p>
			</div>
			<div class="col-md-2">
				<button class="btn btn-primary" type="submit">Zaloguj się</button>
			</div>
		</div>
	</form>
</div>
