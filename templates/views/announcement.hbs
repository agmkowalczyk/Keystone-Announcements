<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offse-2">
      <article>
        <p><a href="/ogloszenia">< wróć do listy ogloszen</a></p>
        <hr>
        <header>
          <h1>{{post.title}}</h1>
		  <h5>
			  {{#if post.author.name.first}}przez {{post.author.name.first}}{{/if}}
		  </h5>
			<p><strong>Data:</strong> {{date post.publishedDate format='D.M.Y'}}</p>
			<p><strong>Województwo:</strong> {{post.province}}</p>
			{{#if post.tel}}
				<p><strong>Telefon:</strong> {{post.tel}}</p>
			{{/if}}
        </header>
		  <div class="post">
			  <strong>Opis:</strong><br>
			  {{post.content.brief}}
		  </div>
      </article>
    </div>
  </div>
</div>
