<div class="container">
	<h1>Zresetuj hasło</h1>
	<br>
	<form action="/zresetuj-haslo" method="POST">
		<div class="form-group row">
			<label class="col-md-2 col-form-label">E-mail*</label>
			<div class="col-md-4">
				<input class="form-control" type="email" value="{{form.email}}" placeholder="Twój adres email" name="email">
			</div>
		</div>
		<div class="form-group row text-right">
			<div class="col-md-6">
				<button class="btn btn-primary" type="submit">Zresetuj hasło</button>
			</div>
		</div>
	</form>
</div>
